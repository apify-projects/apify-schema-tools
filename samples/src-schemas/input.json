{
  "title": "Input schema for Web Scraper",
  "description": "startUrls and searchTerm are required.",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrls": {
      "position": 10,
      "type": "array",
      "title": "Start URLs",
      "description": "List of URLs to scrape",
      "default": [],
      "editor": "requestListSources",
      "items": {
        "type": "object",
        "properties": {
          "url": { "type": "string" }
        }
      }
    },
    "searchTerm": {
      "position": 20,
      "type": "string",
      "title": "Search term",
      "description": "Term to search for",
      "minLength": 1,
      "maxLength": 100
    },
    "categories": {
      "position": 30,
      "type": "array",
      "title": "Categories",
      "description": "List of categories to filter results",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "title": "Category name" },
          "id": { "type": "string", "title": "Category ID" }
        }
      }
    },
    "maxPages": {
      "position": 30,
      "sectionCaption": "Scraping options",
      "sectionDescription": "Configure how many pages to scrape and other options.",
      "type": "integer",
      "title": "Maximum pages",
      "description": "Maximum number of pages to scrape",
      "default": 10,
      "minimum": 1,
      "maximum": 1000
    },
    "proxy": {
      "position": 40,
      "type": "object",
      "title": "Proxy configuration",
      "description": "Proxy settings",
      "default": { "useApifyProxy": true },
      "properties": {
        "useApifyProxy": { "type": "boolean", "default": true }
      }
    },
    "debugMode": {
      "position": 60,
      "type": "boolean",
      "title": "Debug mode",
      "description": "Enable debug logging",
      "default": false
    }
  },
  "required": ["startUrls", "searchTerm"]
}