{
    "title": "Input schema for Web Scraper merged",
    "description": "startUrls and searchTerm are required. searchTerm must be one of the predefined values.",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "startUrls": {
            "type": "array",
            "title": "Start URLs",
            "description": "List of URLs to scrape",
            "default": [],
            "editor": "requestListSources"
        },
        "searchTerm": {
            "type": "string",
            "title": "Search term",
            "description": "Term to search for",
            "enum": [
                "example",
                "test",
                "sample"
            ],
            "enumTitles": [
                "Example",
                "Test",
                "Sample"
            ]
        },
        "categories": {
            "type": "array",
            "title": "Categories",
            "description": "List of categories to filter results",
            "default": []
        },
        "maxPages": {
            "sectionCaption": "Scraping options",
            "sectionDescription": "Configure how many pages to scrape and other options.",
            "type": "integer",
            "title": "Maximum pages",
            "description": "Maximum number of pages to scrape",
            "default": 10,
            "minimum": 1,
            "maximum": 1000
        },
        "proxy": {
            "type": "object",
            "title": "Proxy configuration",
            "description": "Proxy settings",
            "default": {
                "useApifyProxy": true
            }
        },
        "maxRetries": {
            "type": "integer",
            "title": "Maximum retries",
            "description": "Maximum number of retries",
            "default": 3,
            "minimum": 1,
            "maximum": 20
        },
        "debugMode": {
            "type": "boolean",
            "title": "Debug mode",
            "description": "Enable debug logging",
            "default": false
        }
    },
    "required": [
        "startUrls",
        "searchTerm"
    ]
}